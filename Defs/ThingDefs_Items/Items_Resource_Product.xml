<?xml version="1.0" encoding="utf-8"?>
<ThingDefs>
	<!--=============== 燃料 ====================-->
	<ThingDef ParentName="ResourceBase">
		<defName>Momigalite</defName>
		<label>モミガライト</label>
		<description>籾殻を燃料用に加工したもの。</description>
		<graphicData>
			<texPath>Things/Product/Momigalite</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<stackLimit>150</stackLimit>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<MarketValue>1</MarketValue>
			<Mass>0.02</Mass>
			<Flammability>5</Flammability>
			<DeteriorationRate>10</DeteriorationRate>
		</statBases>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
		<tradeTags>
			<li>Fuel</li>
		</tradeTags>
	</ThingDef>
